@model BeersCatalog.BLL.Models.UserDetails

@{
    ViewData["Title"] = "Index";
}

<h1>Registre-se</h1>

@if(ViewBag.Message != null){
    <div class="alert alert-danger" role="alert">
        @ViewBag.Message
    </div>
}

<form asp-action="Index" method="post">
    <div class="form-group mt-4">
    <label asp-for="Email">Email</label>
    <input asp-for="Email" type="email" class="form-control" id="Email" placeholder="Email" required>
    <span asp-validation-for="Email" class="text-danger"></span>
  </div>

  <div class="form-group mt-4">
    <label asp-for="UserName">Nome de Usuário</label>
    <input asp-for="UserName" type="text" class="form-control" id="username" placeholder="Nome de usuário" required>
    <span asp-validation-for="UserName" class="text-danger"></span>
  </div>

  <div class="form-group mt-4">
    <label asp-for="Password">Senha</label>
    <input asp-for="Password" type="password" class="form-control" id="password" placeholder="Senha" required>
     <span asp-validation-for="Password" class="text-danger"></span>
  </div>

  <button type="submit" class="btn btn-primary mt-4">Submit</button>
</form>